<div id ="afisare_db">
    <% var locatie_poza_1 = "../images/Menu/"; var locatie_poza = ""; %>
    <% if (preparateDB) {%>
        <h2 class = "menu_h2">Meniul cu preparate</h2>
    <table>
        <tr>
            <th class="table_name">Meniul de preparate</th>
            <th>ID</th>
            <th>Nume preparat</th>
            <th>Ingrediente</th>
            <th>Gramaj (g)</th>
            <th>Pret (lei)</th>
            <th>Doar preparatele pot fi comandate online!</th>
        </tr>
        <%for(var i=0; i<preparateDB.length; i++) { %>
            <tr>
                <% locatie_poza = locatie_poza_1 + preparateDB[i][0] + ".jpg"%>
                <td><img width = 100 height = 100 src = <%=locatie_poza%>></td>
                <td><%=preparateDB[i][0]%></td> 
                <td><%=preparateDB[i][1]%></td> 
                <td><%=preparateDB[i][2]%></td> 
                <td><%=preparateDB[i][3]%></td>
                <td><%=preparateDB[i][4]%></td>  
                <td name="td_button">
                    <% if(username) {%>
                    <form method='POST' action='adaugare-cos'>
                        <input type="hidden" name="id" value=<%=preparateDB[i][0]%>>
                        <input type="submit" value="Adauga in cos">
                    </form>
                    <% } %>
                </td>
            </tr>
        <% } %>
        </table>
    <% } %>

    <% if (bauturiDB) {%>
        <br>
        <h2 class = "menu_h2">Meniul cu bauturi</h2>
        <table>
            <tr class="table_name">
                <th >Meniul de bauturi</th>
                <th>ID</th>
                <th>Nume bautura</th>
                <th>Optiuni</th>
                <th>Gramaj (ml)</th>
                <th>Pret (lei)</th>
            </tr>
            <%for(var i=0; i<bauturiDB.length; i++) { %>
                <tr>
                    <% locatie_poza = locatie_poza_1 + bauturiDB[i][0] + ".jpg"%>
                    <td><img width = 100 height = 100 src = <%=locatie_poza%>></td>
                    <td><%=bauturiDB[i][0]%></td> 
                    <td><%=bauturiDB[i][1]%></td> 
                    <td><%=bauturiDB[i][2]%></td> 
                    <td><%=bauturiDB[i][3]%></td>
                    <td><%=bauturiDB[i][4]%></td>  
                </tr>
            <% } %>
            </table>
        <% } %>
</div>
